{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true
    },
    "extends": "jquery",
    "rules": {
        "no-loop-func": ["off"],
        "max-len": ["off"],
        "computed-property-spacing": ["off"],
        "array-bracket-spacing": ["off"],
        "no-undef": ["off"],
        "linebreak-style": ["off"],
        "space-in-parens": ["off"],
        "quotes": ["error", "single"],
        "block-scoped-var": 2,
        "dot-notation": 2,
        "eqeqeq": 2,
        "semi": 2,
        "no-else-return": 2,
        "no-fallthrough": 2,
        "no-redeclare": 2,
        "wrap-iife": 2,
        "yoda": 0,
        "no-var": ["warn"]
    },
    "globals": {
        "$": true,
        "Promise": true
    }
}
